	public void removeChatRoom(IChatRoom chatroom) throws RemoteException{
		for(ChatRoom ichatroom : chatrooms){
			if(ichatroom.getUUID().equals(chatroom.getUUID())){
				chatrooms.remove(chatroom);
				break;
			}
		}
		user.removeRoom(chatroom);
	}

